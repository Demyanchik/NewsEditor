<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsEditor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsEditor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NewsEditor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NewsList">NewsList</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="col d-flex flex-row-reverse">
                            <style>
                                .ml{
                                    margin-left: 0.5rem;
                                }
                            </style>
                            <a class="btn btn-outline-dark ml" asp-controller="Home" asp-action="LogIn">Войти в систему</a>
                            <div class="dropdown ml">
                                <button class="btn btn-secondary dropdown-toggle" type="button" 
                                        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"
                                        style="height: 40px;">
                                    Русский
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item active" href="#">Русский</a></li>
                                    <li><a class="dropdown-item" href="#">Английский</a></li>
                                </ul>
                            </div>
                            <span class="ml" style="padding: 0.25rem 0.75rem 0 0;">Язык:</span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/DeleteArticle.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <div id="CommonComponents">
        @Html.Partial("~/Views/UI_Components/Modal_News_DeleteArticle.cshtml")
    </div>

    <div class="overflow-auto h-50" style="max-height: 84vh;">
        <div id="PageContainer" class="container">
            <main id="PageMain" role="main" class="pt-3 pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">   
        <div class="container">
            &copy; @DateTime.Now.Year - Демьянчик Илья Сергеевич - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
</body>
</html>
