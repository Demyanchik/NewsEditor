@{
}
@section Scripts {
    <script src="~/js/EditNews.js"></script>
    }

@using (Html.BeginForm("", "Home", FormMethod.Post))
{
    <style>
        form * {
            margin-top: 8px;
        }
    </style>
    <h2>Создание новости:</h2>
    <div class="form-group col-3">
        <label for="NewsHeader">Заголовок новости:</label>
        <input type="text" class="form-control" id="NewsHeader" placeholder="Введите заголовок" required>
    </div>
    <img id="LoadedImage" style="max-height: 800px; max-width: 800px; display: none;" />
    <input id="NewsImage" type="file" accept="image/*" onchange="ImageLoad(this);" required>
    <div class="form-group col-3">
        <label for="NewsSubHeader">Подзаголовок:</label>
        <input type="text" class="form-control" id="NewsSubHeader" placeholder="Введите подзаголовок" required>
    </div>
    <div class="form-group col-5">
        <label for="NewsTextarea">Текст статьи:</label>
        <textarea class="form-control" id="NewsTextarea" rows="10" required></textarea>
    </div>
    <input class="btn btn-primary" type="submit" value="Отправить" />
    
}
