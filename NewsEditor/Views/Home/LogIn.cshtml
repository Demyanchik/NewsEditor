@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" /> *@

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>-</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body style="background-color: rgb(220, 220, 220);">
    <div style="margin: 80px 0 0 0;">
        <div class="row justify-content-center" style="margin: 0px">
            <div class="col-md-3">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <h1 style="margin: 0 0 15px 0;">NewsEditor</h1>
                    </div>
                    <div class="col"></div>
                </div>
                <div class="card">
                    <style>
                        .input_text {
                            font-size: 12px;
                        }

                        .my_validation {
                            visibility: collapse;
                        }
                    </style>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { style = "margin: 22px" }))
                    {
                        <div class="input-group mb-3">
                            <span class="input-group-text" style="width: 40px">
                                <i class="bi bi-at"></i>
                            </span>
                            <input name="login" type="text" class="form-control @(true@* status == -1 *@?"is-invalid":"")" value="@ViewBag.login" placeholder="Имя пользователя" required>
                            @if (true @* status == -1 *@)
                            {
                                <div id="login_error" class="invalid-feedback" style="display: block">
                                    <span>Такого пользователя не существует.</span>
                                </div>
                            }
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text" style="width: 40px">
                                <i class="bi bi-key"></i>
                            </span>
                            <input name="password" type="password" class="form-control @(true@* status == -2 *@?"is-invalid":"")" value="@ViewBag.password" id="floatingPassword" placeholder="Пароль" required>
                            @if (true @* status == -2 *@)
                            {
                                <div id="password_error" class="invalid-feedback" style="display: block">
                                    <span>Неверный пароль.</span>
                                </div>
                            }
                        </div>

                        <div class="mb-3 form-check">
                            <input name="stay" type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Оставаться в системе</label>
                        </div>
                        <button type="submit" class="btn btn-dark" style="width: 180px;">Войти</button>
                    }
                </div>
            </div>

        </div>
    </div>

    <footer>
        <style>
            footer {
                position: fixed; /* Фиксированное положение */
                left: 0;
                bottom: 0; /* Левый нижний угол */
                /*padding: 10px;*/ /* Поля вокруг текста */
                background-color: white; /* Цвет фона */
                width: 100%; /* Ширина слоя */
            }
        </style>
        <p style="margin: 15px">&copy; @DateTime.Now.Year - Демьянчик Илья Сергеевич</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
</body>
</html>
