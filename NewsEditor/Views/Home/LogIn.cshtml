@{
    Layout = null;
    int? status = ViewBag.status;

    Dictionary<string, string> LangPack = ViewBag.LangPack;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" /> *@

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@LangPack["login_page"] - @LangPack["project_name"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body style="background-color: rgb(220, 220, 220);">
    <div style="margin: 80px 0 0 0;">
        <div class="row justify-content-center" style="margin: 0px">
            <div class="col-md-3">
                <div class="row">
                    <div class="col justify-content-center">
                        <h1 style="margin: 0 0 15px 0;">@LangPack["project_name"]</h1>
                    </div>
                </div>
                <div class="card">
                    @using (Html.BeginForm("LogIn", "Home", FormMethod.Post, new { style = "margin: 22px" }))
                    {
                        <div class="input-group mb-3">
                            <span class="input-group-text" style="width: 40px">
                                <i class="bi bi-at"></i>
                            </span>
                            <input name="login" type="text" class="form-control @(status == -1?"is-invalid":"")" value="@ViewBag.login" placeholder="@LangPack["username"]" required>
                            @if (status == -1)
                            {
                                <div id="login_error" class="invalid-feedback" style="display: block">
                                    <span>@LangPack["username_error"]</span>
                                </div>
                            }
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text" style="width: 40px">
                                <i class="bi bi-key"></i>
                            </span>
                            <input name="password" type="password" class="form-control @(status == -2?"is-invalid":"")" value="@ViewBag.password" id="floatingPassword" placeholder="@LangPack["password"]" required>
                            @if (status == -2)
                            {
                                <div id="password_error" class="invalid-feedback" style="display: block">
                                    <span>@LangPack["password_error"]</span>
                                </div>
                            }
                        </div>

                        <div class="mb-3 form-check">
                            <input name="stay" type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">@LangPack["login_stay"]</label>
                        </div>
                        <button type="submit" class="btn btn-dark" style="width: 180px;">@LangPack["login_btn"]</button>
                    }
                </div>
            </div>

        </div>
    </div>

    <footer>
        <style>
            footer {
                position: fixed; /* Фиксированное положение */
                left: 0;
                bottom: 0; /* Левый нижний угол */
                /*padding: 10px;*/ /* Поля вокруг текста */
                background-color: white; /* Цвет фона */
                width: 100%; /* Ширина слоя */
            }
        </style>
        <p style="margin: 15px">&copy; @DateTime.Now.Year - @LangPack["FIO"]</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
</body>
</html>
