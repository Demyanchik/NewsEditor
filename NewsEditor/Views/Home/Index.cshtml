@{
    Dictionary<string, string> LangPack = ViewBag.LangPack;
    ViewData["Title"] = LangPack["home_title"];
}
@using NewsEditor.Models.DB;
@using NewsEditor.Controllers;
@using NewsEditor.Models.ViewModels;
@model List<News>

<link rel="stylesheet" href="~/css/Home_Slider.css">
@if (Model.Count() > 0)
{
    <div class="d-flex justify-content-center">
        <div id="MainSlider" class="carousel slide" style="width: 60vw; max-height: 80vh;" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#MainSlider" data-bs-slide-to="0"
                class="active"></li>
                @for (int i = 1; i < Model.Count(); i++)
                {
                    <li data-bs-target="#MainSlider" data-bs-slide-to="@i"></li>
                }
            </ol>

            <div class="carousel-inner">
                @Html.Partial("~/Views/UI_Components/Home_SliderItem.cshtml", new Home_SlideModel(Model.First(), true));
                @for (int i = 1; i < Model.Count; i++)
                {
                    Html.RenderPartial("~/Views/UI_Components/Home_SliderItem.cshtml", new Home_SlideModel(Model[i], false));
                }
                @* <div class="carousel-item">
                <div class="card" style="height: 60vh !important; background-color:gray;">3</div>
            </div> *@
            </div>

            <a class="carousel-control-prev" href="#MainSlider" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#MainSlider" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>
    </div>
}
else
{
    <div>
        <h4>@LangPack["home_no_items"]</h4>
    </div>    
}