@using NewsEditor.Models.DB;
@using NewsEditor.Controllers;
@model News

@{
    string Hostname = HomeController.ControllerRef.Hostname;
    var ArticleImageUrl = Hostname + "Home/GetImage?articleId=" + Model.Id;
}

<style>
    .NewsItem {
        padding: 6px 15px;
        margin-bottom: 10px;
        background-color: rgba(255,255,255,0.6);
        background-blend-mode: lighten;
        background-size: 100% auto;
        background-repeat: no-repeat;
    }

    .h-33 {
        height: @(600 * 0.23)px;
    }
</style>

<div class="card h-33 NewsItem" style="background-image: url('@ArticleImageUrl');">
    <h1>@Model.Header</h1>
    <h6>@Model.SubHeader</h6>
</div>